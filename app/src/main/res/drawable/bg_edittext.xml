<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base translucent layer to match background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCF9F9F9" /> <!-- soft frosted white -->
            <corners android:radius="14dp" />
        </shape>
    </item>

    <!-- Light inner stroke for embossed effect -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#33FFFFFF" />
            <corners android:radius="14dp" />
        </shape>
    </item>

</layer-list>
