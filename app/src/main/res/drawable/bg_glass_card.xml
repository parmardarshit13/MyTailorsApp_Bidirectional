<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Blur Color Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3FFFFFF" /> <!-- ~70% translucent white -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Soft Border/Highlight -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#40FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
