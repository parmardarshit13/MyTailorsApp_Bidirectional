<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgMaterialCart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_image_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCartMaterialName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Material Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvCartPricePerMeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹400 / meter"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnMinusMeter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_rounded"
                android:src="@drawable/ic_minus"
                android:contentDescription="Decrease"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvCartMeterCount"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"/>

            <ImageButton
                android:id="@+id/btnPlusMeter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_rounded"
                android:src="@drawable/ic_plus"
                android:contentDescription="Increase"
                app:tint="@android:color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCartTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: ₹400"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="8dp"/>

        <ImageButton
            android:id="@+id/btnRemoveCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/quantum_googred"
            android:contentDescription="Delete"
            android:src="@drawable/ic_dustbin"
            android:background="@drawable/bg_button_rounded"
            app:tint="@android:color/white" />

    </LinearLayout>
</LinearLayout>
