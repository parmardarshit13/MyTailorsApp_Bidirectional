<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvWorkerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worker Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvWorkerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="worker@email.com"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvWorkerSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills: Pants, Shirts"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvWorkerOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed: 5 | Pending: 3"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/holo_green_dark"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
